<%- include("partials/header") -%>
<h1>Compose</h1>
<form method="post" action="/compose">
  <div class="form-group">
    <label> Title</label>
    <input type="text" class="form-control" name="postTitle" />
    <label> Post</label>
    <textarea
      name="postContent"
      cols="30"
      rows="10"
      class="form-control"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary" name="publishPost">
    Publish
  </button>
</form>
<%- include("partials/footer") -%>
